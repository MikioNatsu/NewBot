{
  "name": "starlinkbot",
  "version": "1.3.1",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec tsx src/index.ts",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "backup": "mkdir -p backup && docker run --rm -v starlink_data:/data -v $(pwd)/backup:/backup alpine tar czvf /backup/backup.tar.gz -C /data .",
    "restore": "docker run --rm -v starlink_data:/data -v $(pwd)/backup:/backup alpine sh -c 'cd /data && tar xzvf /backup/backup.tar.gz --strip 1'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@grammyjs/hydrate": "^1.6.0",
    "@grammyjs/runner": "^2.0.3",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "grammy": "^1.35.1",
    "mongoose": "^8.18.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.9",
    "openai": "^6.1.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.5.2",
    "@types/node-fetch": "^2.6.13",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
